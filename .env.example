# Environment settings
ENVIRONMENT=development
DEBUG=true

# Database settings - SQLite (default for local development)
DATABASE_URL=sqlite:///./app.db

# PostgreSQL settings (uncomment and configure when ready)
# DATABASE_URL=postgresql://postgres:postgres@db:5432/app
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=app

# Supabase settings (required for Google OAuth)
SUPABASE_URL=http://localhost:8000  # For local Supabase development
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_JWT_SECRET=your-jwt-secret

# OAuth settings
OAUTH_REDIRECT_URL=http://localhost:8000/api/v1/auth/callback
FRONTEND_URL=http://localhost:3000

# Security settings (for local auth fallback)
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Metrics settings
METRICS_PORT=9090
